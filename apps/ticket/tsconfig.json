{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@kai/apps-ticket/*": ["./*"]
		},
		"jsx": "react-native",
		"types": ["nativewind/types", "node", "react"],
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "ES2022"],
		"allowJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"incremental": true,
		"noUncheckedIndexedAccess": true
	},
	"include": [
		"index.js",
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	],
	"exclude": ["node_modules", "build", "dist", ".expo"]
}
